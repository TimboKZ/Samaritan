<?xml version="1.0"?>

<launch>

    <!-- Start Gazebo with wg world running in (max) realtime -->
    <include file="$(find hector_gazebo_worlds)/launch/start.launch">
        <arg name="gui" value="false"/>
        <arg name="world" value="$(find hector_gazebo_worlds)/worlds/willow_garage.world"/>
    </include>

    <!-- Spawn simulated quadrotor uav -->
    <include file="$(find hector_quadrotor_gazebo)/launch/spawn_quadrotor_with_kinect.launch"/>

    <!-- Activate the quadrotor motors -->
    <node pkg="rosservice" type="rosservice" name="motors_activator"
          args="call --wait /enable_motors &quot;enable: true&quot;"/>

    <!-- Start rviz visualization with preset config -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find caltech_samaritan)/rviz/depth_slam_octomap.rviz"/>

    <!-- Start OctoMap server -->
    <include file="$(find caltech_samaritan)/launch/octomap_server.launch"/>

</launch>
